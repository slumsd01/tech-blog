<section>
  <h2 class="new-post-header">Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="post-title">Title:</label><br>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <textarea id="post-body"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section class="your-posts">
  <h2 class="your-posts-header">Your Posts</h2>
    {{#each posts as |post|}}
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    {{/each}}
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>