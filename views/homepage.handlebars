<div class="post-list">
    {{#each posts as |post|}}
    <article class="post">
        <div class="post-header">
            <a href="/post/{{post.id}}">
                <h3 class="post-title">{{post.title}}</h3>
            </a>
            <p>Posted by {{post.user.username}} <br>
                on {{format_date post.created_at}}
            </p>
        </div>
        <div class="post-body">
            <p>({{post.post_body}})</p>
        </div>
    </article>
    {{/each}}
</div>