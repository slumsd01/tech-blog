<article class="post">
    <div class="post-header">
        <a href="/post/{{id}}">
            <h3 class="post-title">{{title}}</h3>
        </a>
        <p>Posted by {{user.username}} <br>
            on {{format_date created_at}}
        </p>
    </div>
    <div class="post-body">
        <p>{{post_body}}</p>
    </div>
</article>